
@{
    Layout = null;
    var productCategoryList = new ShopThoiTrang.Models.DBShop().ProductCategories.ToList();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--Thư viện Bootstrap-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"><!--Css-->
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
   
    <title>KShop</title>
</head>
<body>

    <header>
        <!-- Phần phía trên cùng -->
      
        <!-- Phần header để hiện thị thông tin về website(tìm kiếm sản phẩm,thanh toán,quản lí tài khoản) -->
        <div class="main-header">
            <div class="container-fluid">
                <div class="row">
                    <!-- Phần hiển thị logo -->
                    <div class="col-sm-3">
                        <div class="logo">
                            <!-- căn giữa logo -->
                            <img src="~/Content/files/logonew.png" class="img-responsive"  alt="logo shop">
                        </div>
                        
                    </div>
                    <div class="col-sm-3">
                        <div class="slider">
                            <div class="col-sm-2 searchBox pull-right">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Nhập sản phẩm cần tìm kiếm">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Phẩn hiển thị giỏ hàng -->
                    <div class="col-sm-3 pull-right">
                        <div class="shopping-cart">
                            Giỏ hàng

                        </div>
                     
                    </div>
                </div>
                </div>
                <!-- kết thúc .main-header -->
                <!-- Menu Navigation bar sử dụng bootstrap  -->
                <div class="main-nav">
                    <div class="container-fluid">
                        <div class="row">
                            <ul class="nav nav-pills">
                                <li>
                                    <!--class active:làm nổi bật trang chủ  -->
                                    <a href="/"><i class="glyphicon glyphicon-home"></i></a>
                                </li>
                                <li class="active"><a href="#">Sản Phẩm</a></li>
                                <li><a href="#">Giới Thiệu</a></li>
                                <li ><a href="#">Tin Tức</a></li>
                                <li><a href="#">Hướng Dẫn Thanh Toán</a></li>
                                <li><a href="#">Thành Viên</a></li>
                                <li><a href="#">Hỏi Đáp</a></li>
                                <li><a href="#">Liên Hệ</a></li>
                                <li><a href="#">Tuyển Dụng</a></li>

                
                                
                                <!-- Phần searchBox -->
                                <div class="col-sm-2 searchBox pull-right">
                                   <!----> 
                                   
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
                <!--kết thúc .main-nav-->
                <!-- Phần quảng cáo -->
                <div class="advertise">
                    <div class="container">
                        <div class="row">
                            <!-- Phần quảng cáo -->
                            <div class="col-sm-12">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Phần Danh Mục Sản Phẩm và Hiển thị danh sách sản phẩm -->
                <div class="header-left-and-righ">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- Phần danh mục sản phẩm -->
                            <div class="col-sm-2">
                                <div class="categories">
                                    <p>Danh Mục Sản Phẩm</p>

                                    <ul>
                                        @foreach(var pc in productCategoryList)
                                        {
                                            var reWriteName = ShopThoiTrang.Models.RewriteURL.GenerateURL(@pc.Name);
                                          <li><a class="glyphicon glyphicon-play-circle"></a>  <a href="/@reWriteName-@pc.ID/">@pc.Name</a></li>
                                        }
                                    </ul>
                                </div>
                                <!-- Phần hiển thị fanpage facebook -->
                                <div class="fanpage">
                                    <!--Phần bên trái-->
                                 </div>
                            </div>
                            <!-- Kết thúc cột 1:danh mục sản phẩm -->

                            <!-- Phần hiển thị nội dung các trang con -->
                            <div class="col-sm-8">
                                @RenderBody()
                            </div>
                            <div class="col-sm-2">
                                <!--Phần bên phải-->
                                <div class="topUser">

                                    
                                </div>
                            </div>
                            <!-- Kết thúc .col-sm-10-->
                        </div>
                    </div>
                </div>
    </header>
    <!-- Kết thúc header -->
    <!-- Phần footer -->
    <footer class="footer">
        <div class="footer-custom">
            <div class="container-fluid">
                <div class="footer-copyright">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12">
                                <p>&copy; 2016 |Thiết Kế Và Phát Triển Bởi KCOMPANY</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <p>Địa chỉ:Ấp 3,Xã Bình Hoà Nam,Huyện Đức Huệ,Tỉnh Long An</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <p>Liên hệ tư vấn :Ms.Hoa 0976671809</p>
                            </div>
                        </div>
                    </div>
                </div>
    </footer>
    <!--Kết thúc .footer-->
    <script src="~/Content/main.js"></script>
    <script src="~/Content/jquery-1.11.1.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
</body>
</html>
