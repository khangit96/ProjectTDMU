
@{
    Layout = "~/Views/Shared/LayoutParentLogin.cshtml";
    var productCategoryList = ViewBag.productCategoryList;
    var count = 0;
}

<script src="~/Content/bootstrap-confirm.js"></script>
    <script>
        $(document).ready(function () {

            /*
             *
             */
            $('.glyphicon-trash').click(function (e) {
                e.preventDefault();
                var url = $(this).attr('href');
            
                var r = confirm("Bạn có muốn xoá danh mục sản phẩm?");
                if (r == true) {
                    window.location.replace(url);
                }
            });

        });
    </script>

    <div class="row" style="margin-top:50px;margin-left:100px">
        <div class="col-md-9">
            <div class="container">
                <div class="panel panel-primary">
                    <div class="panel-heading">DANH MỤC SẢN PHẨM / DANH SÁCH</div>
                    <div class="panel-body">


                        <div class="panel panel-success">

                            <div class="panel panel-heading">
                                <table class="table table-bordered" style="text-align:center">
                                    <tr>
                                        <th style="text-align:center">
                                            #
                                        </th>
                                        <th style="text-align:center"> Tên danh mục</th>

                                        <th style="text-align:center">
                                            Tuỳ chọn
                                        </th>
                                    </tr>

                                    @foreach (var pc in productCategoryList)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @pc.Name

                                            </td>

                                            <td>
                                                <div>
                                                    <a style="font-size:18px" href="/admin/quan-ly-product-category/chinh-sua/@pc.ID/" class="glyphicon glyphicon-pencil"> </a>
                                                </div>
                                                <div>
                                                    <a href="/admin/quan-ly-product-category/xoa/@pc.ID/" style="font-size:18px" class="glyphicon glyphicon-trash"></a>
                                                </div>


                                            </td>
                                        </tr>

                                    }
                                </table>
                            </div> 
                            
                        </div>
                        <div class="pull-right" style="margin-top:300px">
                            <ul class="pagination">

                                @for (int i = 1; i <= @ViewBag.totalPage; i++)
                                {
                                    if (i == ViewBag.page)
                                    {
                                        <li class="active"><a href="@Url.Action("Index", "ProductCategory", new {Page=i})">@i</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("Index", "ProductCategory", new { Page = i })">@i</a></li>

                                    }

                                }
                            </ul>
                        </div>

                        <div class="col-md-3" style="margin-top:350px">
                            <a href="/admin/quan-ly-product-category/them-moi/" type="button" class="btn btn-info">Thêm mới</a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div><!--/.col-->
