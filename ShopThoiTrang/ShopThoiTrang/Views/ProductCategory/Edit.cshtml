
@{
    Layout = "~/Views/Shared/LayoutParentLogin.cshtml";
    var pc = ViewBag.pc;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chỉnh sữa Product Category</title>
</head>
<body>

    <div class="row" style="margin-top:50px;margin-left:100px">
        <div class="col-md-7">
            <div class="container">
                <div class="panel panel-primary">
                    <div class="panel-heading">DANH MỤC SẢN PHẨM / CHỈNH SỬA</div>
                    <div class="panel-body">


                        <div class="panel panel-success">

                            <div class="input">
                                <form class="form-horizontal" method="post" action="@Url.Action("SaveEditProductCategory", "ProductCategory", new {id=pc.ID})">
                                    <div class="form-group">
                                        <label for="nameProduct" class="col-sm-3  control-label">Tên danh mục</label>
                                        <div class="col-sm-5">
                                            @if (ViewBag.checkNameCategory == false)
                                            {
                                                <input type="text" class="form-control" value="" name="productCategoryName" placeholder="Tên danh mục">
                                                <div class="alert alert-danger" style="margin-top:10px">
                                                    <strong>Vui lòng nhập tên danh mục.</strong>
                                                </div>
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control" value="@pc.Name" name="productCategoryName" placeholder="Tên danh mục">

                                            }
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-sm-3 col-sm-offset-3">
                                            <button type="submit" class="btn btn-info">Lưu</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div><!--/.col-->

    <!---->
    
   
</body>
</html>
