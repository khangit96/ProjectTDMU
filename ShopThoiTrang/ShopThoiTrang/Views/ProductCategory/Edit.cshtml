
@{
    Layout = "~/Views/Shared/LayoutParentLogin.cshtml";
    var pc = ViewBag.pc;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chỉnh sữa Product Category</title>
</head>
<body>
    <h1 style="text-align:center">Chỉnh sửa danh mục</h1>
    <div class="input">
        <form class="form-horizontal" method="post" action="@Url.Action("SaveEditProductCategory", "ProductCategory", new {id=pc.ID})">
            <div class="form-group">
                <label for="nameProduct" class="col-sm-2 col-sm-offset-2 control-label">Tên danh mục</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" value="@pc.Name" name="productCategoryName" placeholder="Tên danh mục">
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <button type="submit" class="btn btn-info">Lưu</button>
                </div>
            </div>
        </form>
    </div>
    <div>
        <a href="/admin/quan-ly-product-category/">Quay lại</a>
    </div>
</body>
</html>
