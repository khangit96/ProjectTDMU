@model ShopThoiTrang.Models.ProductCategory

@{
    Layout = "~/Views/Shared/LayoutParentLogin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm Mới Danh Mục Sản Phẩm</title>
</head>
<body>
    <h1 style="text-align:center">Thêm mới danh mục</h1>
    <div class="input">
        <form class="form-horizontal" method="post" action="@Url.Action("SaveCreateProductCategory", "ProductCategory")">
            <div class="form-group">
                <label for="nameProduct" class="col-sm-2 col-sm-offset-2 control-label">Tên danh mục</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="productCategoryName" placeholder="Tên danh mục">
                    @if (ViewBag.checkNameCategory == false)
                    {
                        <div class="alert alert-danger">
                            <strong>Vui lòng nhập tên danh mục.</strong>
                        </div>
                    }

                </div>
            </div>
          
 
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <button type="submit" class="btn btn-info">Thêm</button>
                </div>
            </div>
        </form>
    </div>
    <div>
        <a href="/admin/quan-ly-product-category/">Quay lại</a>
    </div>
</body>
</html>
