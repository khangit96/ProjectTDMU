
@{
    ViewBag.Title = "ViewProductDetail";
    Layout = "~/Views/Shared/LayoutParentHome.cshtml";
    var product = ViewBag.product;
    IFormatProvider formatProvider =
        new System.Globalization.CultureInfo("vi-VN");
}

<div class="products">
    <!-- Phần nội dung hiển thị sản phẩm -->
    <section class="content">
        <div class="container-fluid">
            <!-- Phần hiển thị danh sách sản phẩm -->
            <div class="product-lists">


                <!-- Phần sản phẩm mới -->
                <div class="row">
                    <!-- Dòng 1 -->
                    <div class="col-sm-12">
                        <p class="box-title">Thông Tin Chi Tiết</p>
                    </div>
                </div>
                <div class="row">
                    
                        <div class="col-sm-3 product-item">
                            <!--Cột 1 Sản phẩm đầu tiên -->
                            <div class="image">
                                <!-- Phần hình ảnh sản phầm -->
                                <a href="/san-pham/chi-tiet-@product.ID/">
                                    <img src="@Url.Content(@product.Image)" height="250" width="250" class="img-responsive" alt="No Image" />
                                </a>
                            </div>
                            <!-- Kết thúc phần hình ảnh -->
                            <div class="title">
                                <!-- Phần tiêu đề sản phẩm -->
                                <h2><a href="/san-pham/chi-tiet-@product.ID/">@product.Name</a></h2>
                            </div>
                            <!-- Kết thúc phần tiêu đề-->
                            <div class="info">
                                <!-- Phần thông tin giá cả -->
                                <div class="pull-left">
                                    <del>
                                        <!--  <img src="~/Content/files/new.png" class="img-responsive" width="50" height="50" /> -->

                                    </del>
                                    <ins>
                                        <span>@product.Price.ToString("C", formatProvider)</span>
                                    </ins>
                                </div>
                                <!-- Kết thúc phần thông tin giá -->
                                <div class="pull-right">
                                    <!-- Phẩn hiển thị hình ảnh giỏ hàng -->
                                    <a class="btn-cart" href="#">
                                        <i class="glyphicon glyphicon-shopping-cart"></i>
                                    </a>
                                </div>
                                <!-- Kết thúc hiển thị giỏ hàng -->
                            </div>
                        </div>
                    <!--Kết thúc sản phẩm đầu tiên-->
                    

                </div>
            </div>
            <!--Kết thúc container-->
    </section>
    <!--Kết thúc phần hiển thị sản phẩm-->
</div>