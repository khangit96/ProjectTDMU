@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutParentHome.cshtml";
    var productList = ViewBag.productList;
    IFormatProvider formatProvider =
        new System.Globalization.CultureInfo("vi-VN");
}

<div class="products">
    <!-- Phần nội dung hiển thị sản phẩm -->
     <div class="banner">
         <section class="slider">
             <div id="slider-demo" class="carousel slide" data-ride="carousel">
                 <!-- Indicators -->
                 <ol class="carousel-indicators">
                     <li data-target="#slider-demo" data-slide-to="0" class="active"></li>
                     <li data-target="#slider-demo" data-slide-to="1"></li>
                     <li data-target="#slider-demo" data-slide-to="2"></li>
                 </ol>
                 <!-- Wrapper for slides -->
                 <div class="carousel-inner">
                     <div class="item active">
                         <img src="~/Content/files/banner-sh0pnhi-vn-khai-truong-khuyen-mai.jpg" class="img-responsive" alt="logo shop">
                        
                     </div>
                     <div class="item">
                         <img src="~/Content/files/banner170-1.jpg" class="img-responsive" alt="logo shop">
                     </div>
                     <div class="item">
                         <img src="~/Content/files/banner-lon-noel-4.jpg" class="img-responsive" alt="logo shop">
                     </div>
                 </div>
                 <!-- Controls -->
                 <a class="left carousel-control" href="#slider-demo" data-slide="prev">
                     <span class="glyphicon glyphicon-chevron-left"></span>
                 </a>
                 <a class="right carousel-control" href="#slider-demo" data-slide="next">
                     <span class="glyphicon glyphicon-chevron-right"></span>
                 </a>
             </div>
         </section><!--end .slider-->

     </div>
    <section class="content">
        <div class="container-fluid">
            <!-- Phần hiển thị danh sách sản phẩm -->
            <div class="product-lists">
                <!-- Phần sản phẩm mới -->
                <div class="row">
                    <!-- Dòng 1 -->
                    <div class="col-sm-12">
                           <p class="box-title">Sản Phẩm Mới</p>
                    </div>
                </div>
                <div class="row">
                    @foreach (var p in productList)
                    {
                        var name = new ShopThoiTrang.Models.DBShop().ProductCategories.Find(p.ParentID).Name;

                       <div class="col-sm-3 product-item">
                        <!--Cột 1 Sản phẩm đầu tiên -->
                        <div class="image">
                            <!-- Phần hình ảnh sản phầm -->
                            <a href="/san-pham/chi-tiet-@p.ID/">
                                <img src="@Url.Content(@p.Image)" height="100" width="100" class="img-responsive" alt="No Image" />
                            </a>
                        </div>
                        <!-- Kết thúc phần hình ảnh -->
                        <div class="title">
                            <!-- Phần tiêu đề sản phẩm -->
                            <h2><a href="/san-pham/chi-tiet-@p.ID/">@name</a></h2>
                        </div>
                        <!-- Kết thúc phần tiêu đề-->
                        <div class="info">
                            <!-- Phần thông tin giá cả -->
                            <div class="pull-left">
                                <del>
                                  <!--  <img src="~/Content/files/new.png" class="img-responsive" width="50" height="50" /> -->

                                </del>
                                <ins>
                                    <span>@p.Price.ToString("C", formatProvider)</span>
                                </ins>
                            </div>
                            <!-- Kết thúc phần thông tin giá -->
                            <div class="pull-right">
                                <!-- Phẩn hiển thị hình ảnh giỏ hàng -->

                            </div>
                            <!-- Kết thúc hiển thị giỏ hàng -->
                        </div>
                    </div>
                    <!--Kết thúc sản phẩm đầu tiên-->
                   }
                                      
                </div>
                <div class="row">
                    <ul style="list-style: none">
                        <li><a href="#" style="list-style: none; color: #6B6B6B; font-size: 18px; text-align: right; margin-left: 600px; margin-bottom: 100px"><i class=" fa fa-angle-double-right"></i> Xem tất cả</a></li>

                    </ul>
                </div>




                <!-- Phần sản phẩm giảm giá -->
                <div class="row">
                    <!-- Dòng 1 -->
                    <div class="col-sm-12">
                         <p class="box-title" style="margin-top:30px">Sản Phẩm Giảm Giá</p>
                    </div>
                </div>
                <div class="row">
                    @foreach (var p in productList)
                    {
                        var name = new ShopThoiTrang.Models.DBShop().ProductCategories.Find(p.ParentID).Name;
                        <div class="col-sm-3 product-item">
                            <!--Cột 1 Sản phẩm đầu tiên -->
                            <div class="image">
                                <!-- Phần hình ảnh sản phầm -->
                                <a href="/san-pham/chi-tiet-@p.ID/">
                                    <img src="@Url.Content(@p.Image)" height="100" width="100" class="img-responsive" alt="No Image" />
                                </a>
                            </div>
                            <!-- Kết thúc phần hình ảnh -->
                            <div class="title">
                                <!-- Phần tiêu đề sản phẩm -->
                                <h2><a href="/san-pham/chi-tiet-@p.ID/">@name</a></h2>
                            </div>
                            <!-- Kết thúc phần tiêu đề-->
                            <div class="info">
                                <!-- Phần thông tin giá cả -->
                                <div class="pull-left">
                                    <del>
                                        <span>@p.Price.ToString("C", formatProvider)</span>

                                    </del>
                                    <ins>
                                        <span>@p.DecreasePrice.ToString("C", formatProvider)</span>

                                    </ins>
                                </div>
                                <!-- Kết thúc phần thông tin giá -->
                                <div class="pull-right">
                                    <!-- Phẩn hiển thị hình ảnh giỏ hàng -->
                                   
                                </div>
                                <!-- Kết thúc hiển thị giỏ hàng -->
                            </div>
                        </div>
                    <!--Kết thúc sản phẩm đầu tiên-->
                    }


                </div>
                <!--Kết thúc phần danh sách sản phẩm-->
                <div class="row">
                    <ul style="list-style: none">
                        <li><a href="#" style="color:#6B6B6B; font-size: 18px; text-align: right; margin-left: 600px; margin-bottom: 100px"><i class=" fa fa-angle-double-right"></i> Xem tất cả</a></li>

                    </ul>
                </div>

            </div>
            <!--Kết thúc container-->
    </section>
    <!--Kết thúc phần hiển thị sản phẩm-->
</div>