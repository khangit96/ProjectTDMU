@model IEnumerable<ShopThoiTrang.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản Lý Sản Phẩm</title>
</head>
<body>
   <h1>Quản Lý Sản Phẩm</h1>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
