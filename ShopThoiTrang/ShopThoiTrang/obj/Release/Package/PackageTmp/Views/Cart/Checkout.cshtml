
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/LayoutParentHome.cshtml";
}
<script src="~/Content/bootstrap-confirm.js"></script>
<script>
    $(document).ready(function () {
    
        $("input[name='checkout']").click(function () {
           
            $("#fpost").submit(function () {
                var order_name = $("input:text[name=order_name]").val();
                var order_email = $("input:text[name=order_email]").val();
                var order_address = $("input:text[name=order_address]").val();
                var order_phone = $("input:text[name=order_phone]").val();
                if (order_name == "" || order_email == "" || order_phone == "" || order_address == "")
                {
                    $.confirm({

                        title: 'Lỗi',
                        titleIcon: 'glyphicon glyphicon-exclamation-sign',

                        template: 'danger',

                        message: 'Vui lòng nhập đầy đủ các mục có đánh dấu(*)!',

                        buttonOk: true,
                        labelOk: 'Thử lại',

                        buttonCancel: false

                    });
                    return false;
                }
                return true;
            })
        })
 
    });
</script>
