
@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/Shared/LayoutParentLogin.cshtml";
    var count = 0;
    IFormatProvider formatProvider =
      new System.Globalization.CultureInfo("vi-VN");
    var totalPrice = 0;
}

<div class="row">
    <div class="col-md-9">
        <div class="container">
            <div class="panel panel-primary">
                <div class="panel-heading">THỐNG KÊ / TẤT CẢ SẢN PHẨM</div>
                <div class="panel-body">



                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <table class="table table-bordered" style="text-align:center">
                                <tr>
                                    <th style="text-align:center">
                                        STT
                                    </th>
                                    <th style="text-align:center">
                                        Sản Phẩm
                                    </th>
                                    <th style="text-align:center">
                                        Số lượng đã bán
                                    </th>
                                    <th style="text-align:center">
                                        Tổng tiền
                                    </th>

                                </tr>

                                @foreach (var sale in ViewBag.saleList)
                                {
                                    count++;
                            //        var customerName = new ShopThoiTrang.Models.DBShop().Customers.Find(invoice.CustomerID).CustomerName;
                                    <tr>
                                        <td>
                                            <p>@count</p>
                                        </td>
                                        <td>
                                            <a href="/admin/quan-ly-product/chinh-sua/@sale.product.ID/">@sale.product.Name</a>
                                            <a href="/admin/quan-ly-product/chinh-sua/@sale.product.ID/">
                                                <img src="@Url.Content(sale.product.Image)" height="50" width="50" class="img-responsive" alt="No Image" />
                                            </a>

                                        </td>
                                        <td>
                                            <a href="#">@sale.quantity cái</a>

                                        </td>
                                        <td>
                                            @{
                                                var price=sale.product.Price*sale.quantity;
                                                totalPrice += price;
                                             }
                                            <p style="color:red">@price.ToString("C", formatProvider)</p>
                                        </td>

                                    </tr>

                                }
                            </table>

                            <div class="row">
                                <div class="col-md-7">
                                    Tổng doanh thu:<span style="color:red;font-size:18px">@totalPrice.ToString("C", formatProvider)</span>
                                </div>

                            </div>
                            
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div><!--/.col-->


