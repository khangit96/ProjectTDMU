
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutParentLogin.cshtml";
    var adminList = ViewBag.adminList;
    var count = 0;
}
<h1 style="text-align:center">Danh Sách Người Quản Trị </h1>
<p>
    <a href="/admin/quan-ly-product/them-moi/">Thêm mới</a>
</p>
<table class="table table-bordered" style="text-align:center">
    <tr>
        <th style="text-align:center">
            STT
        </th>
        <th style="text-align:center">
            Username
        </th>
        <th style="text-align:center">
            Password
        </th>
        <th style="text-align:center">
            Vai trò
        </th>
        <th style="text-align:center">
            Tuỳ chọn
        </th>
    </tr>

    @foreach (var admin in adminList)
    {
        count++;
        <tr>
            <td>
               @count
            </td>
            <td>
                @admin.username

            </td>
            <td>
                @admin.password

            </td>
            <td>
                @if(admin.role=="1")
                {
                    <p>Cao nhất</p>
                }
                else
                {
                    <p>Bình thường</p>
                }

            </td>
            <td>
                <a href="/admin/quan-ly-product/chinh-sua/@admin.id/">Chỉnh Sửa  </a><a href="/admin/quan-ly-product/xoa/@admin.id/">Xoá</a>

            </td>
        </tr>

    }
</table>


